<main>
  {{#with car}}
    <h1>{{name}}</h1>
    <img class="cube" src={{imageUrl}} />
    <div class="details">
      <p><span>Description:</span>
        {{description}}
      </p>
      <p><span>Price:</span> {{price}}</p>
      <a class="btn" href="/">Back</a>
      <a class="btn" href="/products/delete/{{_id}}">Delete</a>
    </div>
  {{/with}}
</main>